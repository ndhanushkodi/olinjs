<h1>Ingredients</h1>

<form id="new" class=new_form>
	<h3>New Ingredient:</h3>
	<br> 
		Name: <input type="text" name="name">

		Price: <input type="text" name="price">
		<button>Submit</button>
	</br>
</form>

<h3>Ingredients in Stock: </h3>
<ul id="inStock">
{{#each ingList}}
<li>
	<form id={{this._id}} class=edit_form>
		<span class="nameSpan">
		Name: {{this.name}}
		</span>
		Price: {{this.price}}
		Stock:{{this.stock}}
		
		
			<input type="text" name="name" class="nameText">
			<button class="editName">Edit Name</button>

			<input type="text" name="price" class="editText">
			<button class="editPrice">Edit Price</button>

			<input type="submit" value="Out of Stock">
		
	</form>
</li>
{{/each}}
</ul>